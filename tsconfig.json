{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["bun-types"],
    "paths": {
      "@paperdave/fusion": ["./src/fusion"],
      "$cmd-runner": ["./src/cmd-runner"],
      "$project": ["./src/project"],
      "$logger": ["./src/logger"],
      "$constants": ["./src/constants"],
      "$util": ["./src/util"]
    }
  }
}
