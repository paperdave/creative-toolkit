{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["bun-types"],
    "paths": {
      "$": ["./src"],
      "$/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
}
